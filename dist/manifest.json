{
    "manifest_version": 2,
    "name": "flashkill",
    "description": "Diese Extension soll den Umgang mit der 99Damage Homepage erleichtern.",
    "version": "2.0.1",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://liga.99damage.de/*"
            ],
            "js": [
                "content/index.js"
            ]
        },
        {
            "matches": [
                "https://liga.99damage.de/leagues/teams/*-*"
            ],
            "js": [
                "content/team-page/index.js"
            ],
            "css": [
                "content/team-page/styles.css"
            ]
        },
        {
            "matches": [
                "https://liga.99damage.de/leagues/matches/*-*"
            ],
            "js": [
                "content/match-page/index.js"
            ],
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "https://open.faceit.com/data/v4/players?game=csgo&game_player_id=*",
        "https://liga.99damage.de/*",
        "storage",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        "LICENSE-DETAILS.txt"
    ]
}