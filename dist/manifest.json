{
    "manifest_version": 2,
    "name": "flashkill",
    "description": "Diese Extension soll den Umgang mit der 99Damage Homepage erleichtern.",
    "version": "1.3.13",
    "background": {
        "scripts": [
            "thirdParty/uint64.js",
            "thirdParty/jquery-3.4.0.min.js",
            "scripts/util/background/fetchCached.js",
            "scripts/team-page/matches/background.js",
            "scripts/team-page/members/background.js",
            "scripts/team-page/maps/background.js",
            "scripts/team-page/seasons/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://liga.99damage.de/de/leagues/teams*"],
            "js": [
                "thirdParty/jquery-3.4.0.min.js",
                "thirdParty/jquery.dataTables.js",
                "thirdParty/jquery.multiselect.js",
                "scripts/util/content/util.js",
                "scripts/team-page/members/content.js",
                "scripts/team-page/seasons/content.js"
            ],
            "css": [
                "thirdParty/jquery.multiselect.css",
                "thirdParty/tooltipster.bundle.min.css"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {  
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    "permissions": [
        "https://open.faceit.com/*",
        "https://flashkill.smatify.com/api/*",
        "https://steamcommunity.com/profiles/*",
        "https://csgo.99damage.de/*",
        "https://liga.99damage.de/*",
        "storage",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        "LICENSE-DETAILS.txt"
    ]
}
